<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvLocationFeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:hint="@string/restaurant_name"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvBillAmountFeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="@string/total_bill_amount"
        android:textColor="@color/black"
        android:textSize="23dp"
        app:layout_constraintTop_toBottomOf="@id/tvLocationFeed" />


    <TextView
        android:id="@+id/tvAmountsOwedFeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="Tina owes 20"
        android:textColor="@color/black"
        android:textSize="23dp"
        app:layout_constraintTop_toBottomOf="@id/tvBillAmountFeed" />

    <TextView
        android:id="@+id/tvTimeStampFeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAmountsOwedFeed" />


</androidx.constraintlayout.widget.ConstraintLayout>